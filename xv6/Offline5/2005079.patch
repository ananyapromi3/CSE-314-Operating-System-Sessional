+            thread_mutex_lock(&plock);
+            printf("we will miss an update. old: %d total_balance: %d\n", old, total_balance);
+            thread_mutex_unlock(&plock);
+        }
+        total_balance = old + 1;
+        thread_spin_unlock(&lock);
+        thread_mutex_unlock(&mlock);
+    }
+
+    thread_mutex_lock(&plock);
+    printf("Done s:%s\n", b->name);
+    thread_mutex_unlock(&plock);
